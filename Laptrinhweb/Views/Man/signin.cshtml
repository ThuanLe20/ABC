
@{
    ViewBag.Title = "signin";
    Layout = "~/Views/Shared/_LayoutABC1.cshtml";
}
<table align="center">
    <h2 style="text-align:center"><br /><br />Sign up</h2>
    <p>(* is necessary)</p>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="width:100px">
            <td>Name*:</td>
            <p>
            <td>
                @Html.TextBox("HotenKH")
                <br />
                @ViewData["Loi1"]
            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Username*:</td>
            <p>
            <td>
                @Html.TextBox("TenDN")
                <br />
                @ViewData["Loi2"]

            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Password*:</td>
            <p>
            <td>
                @Html.Password("Matkhau")
                <br />
                @ViewData["Loi3"]

            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Re-enter*: </td>
            <p>
            <td>
                @Html.Password("Matkhaunhaplai")
                <br />
                @ViewData["Loi4"]

            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Email*:</td>
            <p>
            <td>
                @Html.TextBox("Email")
                <br />
                @ViewData["Loi5"]

            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Address:</td>
            <p>
            <td>
                @Html.TextBox("Diachi")
                <br />
            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Phone*:</td>
            <p>
            <td>
                @Html.TextBox("Dienthoai")
                <br />
                @ViewData["Loi6"]

            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td>Birth:</td>
            <p>
            <td>
                <input type="date" name="Ngaysinh" /><br />
            </td>
            </p>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <button type="Submit" class="btn btn-default">Sign in</button>

            </td>
        </tr>

    }
</table>
